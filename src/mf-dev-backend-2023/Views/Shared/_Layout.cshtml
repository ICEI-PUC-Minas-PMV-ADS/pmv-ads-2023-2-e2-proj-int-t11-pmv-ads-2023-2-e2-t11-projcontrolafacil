<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Controla Fácil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mf_dev_backend_2023.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/img/logo_grafico.ico" type="image/x-icon">
    
    <style>
        body {
            background-color: #2125291a;
        }

        li {
            list-style-type: none;
            display: inline;
            margin-left: 1px;
        }

        .dropdown-item {
          
            color: #9b9d9e;
        }

        footer {
            color: #9b9d9e;
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark bg-gradient border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.ico" width="170px"  /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-ligt" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Transações</a>
                            <div class="dropdown-menu bg-dark bg-gradient" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Transacoes" asp-action="Index">Transações</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Transacoes" asp-action="Movimentacao" asp-route-id="Despesa">Despesas</a>
                                <a class="dropdown-item" asp-controller="Transacoes" asp-action="Movimentacao" asp-route-id="Receita">Receitas</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-ligt" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuários</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item" style="color:#9b9d9e">
                                Olá, @User.Identity.Name <a class="nav-link text-ligt" style="display: inline;" asp-area="" asp-controller="Usuarios" asp-action="Logout"><i class="fa-solid fa-right-to-bracket" style="color: #c20000;"></i></a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-ligt" asp-area="" asp-controller="Usuarios" asp-action="Login"><i class="fa-solid fa-right-to-bracket"></i></a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center bg-dark bg-gradient site-footer">
        <div class="text-center p-3">
            &copy; 2023 - Controla Fácil
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
